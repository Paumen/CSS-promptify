{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "/home/user/CSS-promptify/.claude/hooks/check-file-size.sh"
          }
        ]
      }
    ]
  },

  "permissions": {
    "deny": [
      "Edit(spec/DECISIONS.md)",
      "Edit(spec/AUTHORITY.md)",
      "Edit(spec/COMMENT_HEADERS.md)",
      "Edit(prompts/SYSTEM_PROMPT.md)",
      "Edit(tests/RULES_VALIDATION_REPORT_HUMAN.md)"
    ],

    "ask": [
      "Edit(spec/PRD_BUILD_SPEC.md)",
      "Edit(spec/RULEBOOK_INDEX.md)",
      "Edit(docs/ROOT_CAUSE_ANALYSIS_AND_ACTION_PLAN.md)",

      "Write",
      "bash cat *"
    ],


    ]
  }
}
